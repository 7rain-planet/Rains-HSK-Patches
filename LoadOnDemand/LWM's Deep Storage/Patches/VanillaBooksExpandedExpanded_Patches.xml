<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	
	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Books Expanded Expanded (Continued)</li>
        </mods>
		<match Class="PatchOperationSequence">

            <operations>
                <!-- 书架补丁 -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="VanillaBooksExpandedExpanded_Bookshelf"]/costStuffCount</xpath>
                    <value>
                        <costStuffCount>45</costStuffCount>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="VanillaBooksExpandedExpanded_Bookshelf"]</xpath>
                    <value>
                        <costList>
                            <ComponentMedieval>8</ComponentMedieval>
                        </costList>
                    </value>
                </li>
             </operations>
        </match>

		
	</Operation>

</Patch>
